@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var user = HttpContextAccessor.HttpContext?.User;
    string userName = user?.Identity?.Name ?? HttpContextAccessor.HttpContext?.Session.GetString("UserName") ?? "Unknown";
    string rolesCsv = HttpContextAccessor.HttpContext?.Session.GetString("Roles") ?? "";
    var roles = rolesCsv.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
    bool IsInRole(string role) =>
        (user?.Identity?.IsAuthenticated ?? false && user.IsInRole(role))
        || roles.Contains(role);
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - DSM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background: #f4f7fb;
            font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto;
        }

        .sidebar {
            width: 260px;
            min-height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background: #12314a;
            color: #fff;
            padding: 20px;
        }

        .main {
            margin-left: 260px;
            padding: 24px;
        }

        .nav-link {
            color: #cfe6f3;
        }

            .nav-link.active, .nav-link:hover {
                background: rgba(255,255,255,0.1);
                color: #fff;
                border-radius: 8px;
            }

        .profile-small {
            text-align: center;
            margin-bottom: 18px;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(13,38,63,0.08);
        }
    </style>
    @RenderSection("Head", required: false)
</head>
<body>
    <div class="sidebar">
        <div class="profile-small">
            <img src="https://cdn-icons-png.flaticon.com/512/1946/1946429.png"
                 style="width:76px;height:76px;border-radius:50%;box-shadow:0 4px 14px rgba(0,0,0,0.15);" />
            <div class="mt-2"><strong>@userName</strong></div>
            <small class="text-muted">@string.Join(", ", roles)</small>
        </div>
        @await Html.PartialAsync("_Sidebar", IsInRole)
    </div>

    <div class="main">
        <nav class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h4 class="mb-0">@ViewData["Title"]</h4>
            </div>
            <div>
                <!-- Có thể thêm nút logout, user menu ở đây -->
            </div>
        </nav>

        <div class="content">
            @RenderBody()
        </div>
    </div>

    <!-- Đảm bảo có footer nếu cần -->
    <footer class="mt-5 text-center text-muted">
        &copy; 2025 - Department Store Management
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>