@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var userName = HttpContextAccessor.HttpContext?.Session.GetString("UserName");
    var rolesCsv = HttpContextAccessor.HttpContext?.Session.GetString("Roles") ?? "";
    var roles = rolesCsv.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - DSM</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-page="/Index">DSM</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="nav">
                <ul class="navbar-nav me-auto">
                    @* Common links visible to authenticated users *@
                    @if (!string.IsNullOrEmpty(userName))
                    {
                        <li class="nav-item"><a class="nav-link" asp-page="/Dashboard/Index">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Products/Index">Products</a></li>
                    }

                    @* Admin menu *@
                    @if (roles.Contains("Admin"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-page="/Admin/Users">Users</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Admin/Roles">Roles</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Admin/System">System</a></li>
                    }

                    @* Manager menu *@
                    @if (roles.Contains("Manager"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-page="/Categories/Index">Categories</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Suppliers/Index">Suppliers</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Employees/Index">Employees</a></li>
                    }

                    @* Inventory Employee menu *@
                    @if (roles.Contains("InventoryEmployee"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-page="/Inventory/Manage">Inventory</a></li>
                    }

                    @* Sales Employee menu *@
                    @if (roles.Contains("SalesEmployee"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-page="/Orders/Create">Create Order</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Orders/History">Order History</a></li>
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (!string.IsNullOrEmpty(userName))
                    {
                        <li class="nav-item"><span class="nav-link">Xin chào <strong>@userName</strong></span></li>
                        <li class="nav-item"><a class="nav-link text-danger" asp-page="/Account/Logout">Logout</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-page="/Account/Login">Login</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="text-center mt-5 mb-4 text-muted">
        <small>© @DateTime.Now.Year - Department Store Management</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
