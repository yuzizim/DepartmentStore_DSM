@page
@model DepartmentStore.Client.Pages.Dashboard.AdminModel
@{
    Layout = "~/Pages/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card text-bg-primary text-center">
                <div class="card-body">
                    <h5>Users</h5>
                    <h2>@Model.UserCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-success text-center">
                <div class="card-body">
                    <h5>Products</h5>
                    <h2>@Model.ProductCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-warning text-center">
                <div class="card-body">
                    <h5>Orders</h5>
                    <h2>@Model.OrderCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-danger text-center">
                <div class="card-body">
                    <h5>Payments</h5>
                    <h2>@Model.PaymentCount</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    Orders per Month
                </div>
                <div class="card-body">
                    <canvas id="ordersChart" height="120"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    User Roles Distribution
                </div>
                <div class="card-body">
                    <canvas id="rolesChart" height="120"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const ordersCtx = document.getElementById('ordersChart');
        const ordersChart = new Chart(ordersCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.MonthLabels)),
                datasets: [{
                    label: 'Monthly Orders',
                    data: @Html.Raw(Json.Serialize(Model.MonthlyOrders)),
                    borderColor: '#007bff',
                    tension: 0.3,
                    fill: false
                }]
            },
            options: {
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        const rolesCtx = document.getElementById('rolesChart');
        const rolesChart = new Chart(rolesCtx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.RoleLabels)),
                datasets: [{
                    label: 'Users by Role',
                    data: @Html.Raw(Json.Serialize(Model.RoleData)),
                    backgroundColor: ['#0d6efd', '#198754', '#ffc107', '#dc3545']
                }]
            }
        });
    </script>
}
